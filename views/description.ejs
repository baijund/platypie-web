<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <% include ../includes/jquery %>
    <% include ../includes/bootstrap %>
    <link rel="stylesheet" type="text/css" href ="stylesheets/style.css">
    <script type="text/javascript" src="javascripts/activities/DescriptionActivity.js"></script>
  </head>
  <body class = "registration">
    <div class="container">
      <div class="row">
        <div class="col-md-12 text-center">
          <div class="center-block">
            <h1 class="" style="text-decoration: underline"><%= movie.title %></h1>
            <p>
              <!-- <%= JSON.stringify(movie,null,2) %> -->
            </p>
            <p>
                <table style = "width: 100%">
                    <tr>
                        <th>Movie Information</th>
                    </tr>
                </table>
                <table style="width:100%">
                        <tr>
                            <td>Title</td>
                            <td>Year</td>
                            <td>Rating</td>
                            <td>User Rating</td>
                            <td>Major Rating</td>
                            <!-- <tr><td>Synopsis</td></tr> -->
                        </tr>
                        <tr>
                            <td><%= movie.title%></td>
                            <td><%= movie.year%></td>
                            <td><%= movie.mpaa_rating%></td>
                            <td><%= movie.averageRating%></td>
                            <td>
                              <%= (Math.random()*5).toFixed(2) %>
                            </td>
                            <!-- <td><%= movie.synopsis%></td> -->
                        </tr>
                    </tr>
                </table>
                <br><br><br>
                <table style = "width: 100%">
                    <tr>
                        <th>Synopsis</th>
                        <tr>
                            <td><%= movie.synopsis%></td>
                        </tr>
                    </tr>
                </table>
                <br><br><br>
                <table style = "width: 100%">
                    <tr>
                        <th>Cast</th>
                    </tr>
                </table>
                <table style = "width: 100%">
                    <tr>
                        <tr>
                            <% for(var i=0; i<movie.abridged_cast.length; i++) { %>
                                    <td><%= movie.abridged_cast[i].name %> <% } %></td>
                        <tr>
                            <!-- <% for(var i=0; i<movie.abridged_cast.length; i++) { %>
                                    <td><%= movie.abridged_cast[i].characters %> <% } %></td> -->
                        </tr>
                        </tr>
                    </tr>
                </table>
                <h2> Rate! </h2>
                <p>
                  Quantity (between 1 and 5)
                </p>
                  <input type="number" id="myRat" name="quantity" min="0" max="5" step="0.5"><br>
                  <button id="ratButt">Rate</button>
            </p>


          </div>
        </div>
      </div>
    </div>
  </body>
</html>
